<!DOCTYPE html>
<html lang="en">
  <%- include("../parts/head", { title: 'Movies'}) %>
  <body>
    <%- include("../parts/header") %>
    <div id="interface" class="container">
      <h2 class="display-5">Filmes</h2>
      <hr class="my-4" />

      <div class="table-responsive">
        <table id="filmes" class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">id</th>
              <th scope="col">Título</th>
              <th scope="col">Ano</th>
              <th scope="col">Gênero</th>
              <th scope="col">Classificação</th>
              <th scope="col">Duração</th>
              <th scope="col">Sinópse</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% movies.forEach((movie) => { %>
            <tr>
              <th scope="row"><%= movie.movie_id %></th>
              <td><%= movie.title %></td>
              <td><%= movie.year %></td>
              <td><%= movie.genre %></td>
              <td><%= movie.parental_rating %></td>
              <td><%= movie.duration %></td>
              <td><%= movie.synopsis %></td>
              <td>
                <a href="/movie/<%= movie.movie_id %> " title="Editar Filme">
                  <img src="./images/edit_icon.png" alt="Edit_Icon" />
                </a>
              </td>              
            </tr>

            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <%- include("../parts/footer") %> <%- include("../parts/bundle") %>
  </body>
</html>
